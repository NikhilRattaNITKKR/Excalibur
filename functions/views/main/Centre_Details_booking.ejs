<%- include('./Delta/header') %>

<link rel="stylesheet" href="/css/centerdetailsbooking.css">

<body id="myPage" data-spy="scroll" data-target=".navbar" data-offset="50">

  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Select Date and Slot</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">

        </div>
      </div>
    </div>
  </div>
  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#myPage">EXCELERENTUM</a>
      </div>
      <div class="collapse navbar-collapse" id="myNavbar">
        <ul class="nav navbar-nav navbar-right">
          <li><a href="/">HOME</a></li>
          <li><a href="/center">CENTRE</a></li>
          <li><a href="/user/profile">PROFILE</a></li>
          <li><a href="/register">REGISTER</a></li>

          <% if(auth) { %>
          <li>
            <form action="/logout" method="POST">
              <button type="submit" class="btnAuth">Logout</button>
            </form>
          </li>
          <% } else { %>
          <li><a href="/signup"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
          <li>
            <form action="/login" method="GET">
              <button type="submit" class="btnAuth">Login</button>
            </form>
          </li>
          <% } %>
          <li><a href="#"><span class="glyphicon glyphicon-search"></span></a></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container-fluid">
    <h2><B><%=cntr_data.centre_name%></b></h2>
    <p>Click on below links to learn more about the centre.</p>

    <ul class="nav nav-tabs">

      <li><a data-toggle="tab" href="#menu1">General Information</a></li>
      <li><a data-toggle="tab" href="#menu2">Book An Appointment</a></li>
      <li><a data-toggle="tab" href="#menu3">Reviews</a></li>
      <li><a data-toggle="tab" href="#menu4">For Center Eymployee</a></li>

    </ul>

    <div class="tab-content">
      <div id="menu1" class="tab-pane fade in active">
        <h3><b>General Info</b></h3>
        <div class="row">
          <div class="col-md-4">
            <img src="<%=cntr_data.images[0]%>" class="img-responsive" alt="Photo" height="245" width="255"><br>
          </div>
          <div class="col-md-4">
            <p> <b>Domain:</b> <%=cntr_data.domain%></p>
            <p><b>Overview:</b><%=cntr_data.centre_desc%> </p>
            <p><b>Established:</b> 1997</p>
            <h3><b>Opening Hours</b></h3>
            <p><b>The establishment is functional on</b></p>
            <p><b>Monday:-</b> 10:00 Am - 7:00 Pm</p>
            <p><b>Tuesday:- </b>10:00 Am - 7:00 Pm</p>
            <p><b>Wednesday:- </b>10:00 Am - 7:00 Pm</p>
            <p><b>Thursday:- </b>10:00 Am - 7:00 Pm</p>
            <p><b>Friday:- </b>10:00 Am - 7:00 Pm</p>
            <p><b>Saturday:- </b>10:00 Am - 7:00 Pm</p>
            <p><b>Sunday:- </b>Closed</p>
          </div>
          <div class="col-sm-2">
            <h3><b>Contact Information</b></h3>
            <p><b>Address:</b><%=cntr_data.location%></p>
            <p><b>Phone:</b><%=cntr_data.PhoneNo%></p>
            <p><b>Email:</b>email@gmail.com</p>
            <!-- <p><%=cntr_data.id%></p> -->
          </div>
        </div>
      </div>
      <div id="menu2" class="tab-pane fade">
        <!-- <h3><b>Fill Out The Form</b></h3> -->
          <!-- <h2>Select Department</h2> -->
          <div class="col-sm-7">
            <div class="row">
              <div class="col-sm-12 ">
                <div class="panel panel-default text-left">
                  <div class="panel-body bg-2">
                    <p><h2>Book your Appointment</h2></p>
                  </div>
                </div>
              </div>
            </div>
          </div>
            <div class="row">
              <div class="col-sm-12 ">
                <div class="panel panel-default text-left">
                  <div class="panel-body bg-2">
                    <form method="POST" action="/appointment">
                      <input type="text" value="<%= cntr_data.id %>" style="display: none;" name="centreId">
                      <input type="text" value="<%= cntr_data.userId %>" style="display: none;" name="userId">

                      <div class="form-group">
                        <label for="exampleFormControlInput1">Date</label>
                        <input type="datetime-local" class="form-control" id="exampleFormControlInput2" name="date">
                      </div>

                        <div class="form-group">

                        </div>

                  <div class="form-group">
                    <label for="exampleFormControlInput1">Select Department</label>
                    <select  name="Department">
                      <%reqDept.forEach(dept=>{%>
                        <option value="<%=dept.dept_name%>"><%=dept.dept_name%></option>
                      <%})%>
                    </select>
                  </div>
  <button type="submit" class="btn btn-primary mt-5" style="width:25vw;margin:0 auto;margin-top:5vh;">Book Now</button>
                      </form>

                  </div>
                </div>
              </div>
            </div>
          </div>

          <div id="menu4" class="tab-pane fade">

              <div class="col-sm-7">
                <form class="" action="/center/centerEymployees/<%= cntr_data.id%>" method="GET">  <!--sharique yahan :centerId ki jagah center id kahan se aaegi?-->
                <div class="form-group">
                  <label for="exampleFormControlTextarea1">Enter Center email</label>
                  <input type="email" >
               </div>
               <div class="form-group">
                 <label for="exampleFormControlTextarea1">password</label>
                 <input type="password">
              </div>
              <button type="submit" name="button">Submit</button>
                  </form>
              </div>
            </div>

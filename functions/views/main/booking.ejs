<%- include('./Delta/header') %>
<link rel="stylesheet" href="/css/booking.css">

<%- include('./Delta/navbar') %>

<div class="container" id="primaryContainer">

  <form method="POST" action="/appoint">

    <div class="form-group">
      <label for="exampleFormControlInput1">Date</label>
      <input type="date" class="form-control" id="exampleFormControlInput2" name="date">
    </div>

    <div class="form-group">
      <label for="exampleFormControlSelect1">Select Time Slot</label>
      <select class="form-control" id="category" name="slot">
        <option value='10AM'>10AM</option>
        <option value='11AM'>11AM</option>
        <option value='12AM'>12AM</option>
        <option value='1PM'>1PM</option>
        <option value='2PM'>2PM</option>
      </select>
    </div>

    <button type="submit" class="btn btn-primary mt-5" style="width:25vw;margin:0 auto;margin-top:5vh;">Book Now</button>
  </form>

  <img class="image " src="https://image.freepik.com/free-vector/saving-money-concept-background_23-2148146454.jpg" width="100px" height="100px" alt="Responsive image">

</div>
<%- include('./Delta/footer') %>
